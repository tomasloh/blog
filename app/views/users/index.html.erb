<% @users.each do |user| %>
  <div class = 'user'>
    <b>User name:</b> <%= user.name %> <%= user.lname %> (<%= user.login %>)
    <%= link_to 'Show', user %>
    <%= link_to 'Edit', edit_user_path(user) %>
    <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %>
  </div>
<% end %>

